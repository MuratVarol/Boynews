<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="tv_base">

    </style>

    <style name="big_blue" parent="tv_base">
        <item name="android:textColor">@color/skyBlue</item>
        <item name="android:textSize">@dimen/header_text_size</item>
    </style>

    <style name="small_black" parent="tv_base">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/description_text_size</item>
    </style>

    <style name="small_blue" parent="small_black">
        <item name="android:textColor">@android:color/holo_blue_dark</item>
    </style>

    <style name="white_middle" parent="tv_base">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/app_bar_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="edt_base">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="edt_search" parent="edt_base">
        <item name="android:textSize">@dimen/app_bar_text</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
